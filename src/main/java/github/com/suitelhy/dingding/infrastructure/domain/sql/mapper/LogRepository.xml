<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="github.com.suitelhy.dingding.domain.repository.LogRepository">

    <!-- Mybatis 的配置中定义了 类型别名 (typeAliases), 见 application.yml -->

    <resultMap id="BaseResultMap" type="log">
        <id column="ID" property="id" jdbcType="VARCHAR"/>
        <result column="USERID" property="userid" jdbcType="VARCHAR"/>
        <result column="TIME" property="time" jdbcType="DATETIME"/>
        <result column="TYPE" property="type" jdbcType="TINYINT"/>
        <result column="DETAIL" property="detail" jdbcType="VARCHAR"/>
        <result column="IP" property="ip" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="BaseColumns">
        ID, USERID, TIME, TYPE, DETAIL, IP
    </sql>

    <sql id="table">
        log
    </sql>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="BaseColumns"/>
        FROM <include refid="table"/>
        ORDER BY TIME DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="selectLogByUserid" resultMap="BaseResultMap">
        SELECT <include refid="BaseColumns"/>
        FROM <include refid="table"/>
        WHERE USERID = #{userid, jdbcType=VARCHAR}
        ORDER BY TIME DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="selectCount" resultMap="BaseResultMap">
        SELECT COUNT(1) USERID
        FROM <include refid="table"/>
    </select>

    <select id="selectCountByUserid" resultMap="BaseResultMap">
        SELECT COUNT(1) USERID
        FROM <include refid="table"/>
        WHERE USERID = #{userid, jdbcType=VARCHAR}
    </select>

    <insert id="insert" parameterType="log">
        INSERT INTO <include refid="table"/>
        (ID, USERID, TIME, TYPE, DETAIL, IP)
        VALUES (#{id, jdbcType=VARCHAR}
            , #{userid, jdbcType=VARCHAR}
            , #{time, jdbcType=DATETIME}
            , #{type, jdbcType=TINYINT}
            , #{detail, jdbcType=VARCHAR}
            , #{ip, jdbcType=VARCHAR})
    </insert>

    <delete id="delete" parameterType="string">
        DELETE FROM <include refid="table"/>
        WHERE ID = #{id, jdbcType=VARCHAR}
    </delete>

    <delete id="deleteThisUser" parameterType="string">
        DELETE FROM <include refid="table"/>
        WHERE USERID = #{userid, jdbcType=VARCHAR}
    </delete>

</mapper>